    <header class="header">
        <div class="container">
            <div class="logo">
                <img src="https://th.bing.com/th?id=OIP.fXktcQxAb0ahw5VZwNk_GgHaHa&w=250&h=250&c=8&rs=1&qlt=90&o=6&dpr=1.3&pid=3.1&rm=2" alt="my blog logo">
            </div>
            <nav class="nav centered">
                <a href="#">Home</a>
                <a href="/blog/myblog">My Blog</a>
                <a href="#">Categories</a>
                <a href="#">Contact</a>
            </nav>
            <div class="profile">
               <img src="https://th.bing.com/th?id=OIP.bJpr9jpclIkXQT-hkkb1KQHaHa&w=250&h=250&c=8&rs=1&qlt=90&o=6&dpr=1.3&pid=3.1&rm=2" alt="Profile Icon">
            </div>
        </div>
    </header>
    
    
    

    <main class="main-content">
        <section class="featured-post">
            <h2 class="featured-title">WELCOME TO MY BLOG</h2>
            <p class="featured-description">Discover stories, tips, and ideas from around the world.</p>
            <a href="#" class="read-more">Read Featured Post</a>
            <p class="quotes">
                "Every story has the power to change lives. Here at My Blog, we believe in the magic of ideas, the beauty of connection, and the endless possibilities of creativity."
            </p>
        </section>

        <section class="recent-posts">
            <h2>Recent Posts</h2>
            <div class="post-list">
                <% blogdata.forEach((blog) => {%>
                  <article class="post">
                    <h3 class="post-title"><a href="#"><%- blog.title %></a></h3>
                    <p class="post-excerpt">
                        <%- blog.content %>
                    </p>
                </article>
                <% }) %>
            
            </div>
        </section>
    </main>
    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 My Blog. All Rights Reserved.</p>
        </div>
    </footer>
