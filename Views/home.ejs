.header {
    background-color: #f8f9fa; /* Optional: Light background */
    padding: 10px 20px;
}

.container {
    display: flex;
    align-items: center; /* Align items vertically in the center */
    justify-content: space-between; /* Space between logo and nav links */
}

.logo img {
    height: 40px; /* Adjust the logo size */
}

.nav {
    display: flex; /* Display links inline */
    gap: 20px; /* Add space between links */
}

.nav a {
    text-decoration: none;
    color: #333; /* Default link color */
    font-weight: bold;
}

.nav a:hover {
    color: #007bff; 
}
.profile img {
    height: 40px; 
    border-radius: 50%; 
    cursor: pointer;
} 

.profile img:hover {
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.3); 
}


.main-content {
    padding: 2rem 0;
    background: #f5f5f5;

   

}

.featured-post {
    text-align: center;
    margin-bottom: 2rem;
    
}

.featured-title {
    font-size: 2.5rem;
    color: #141313;
    margin-bottom: 1rem;
    font-style:var();
    font-family: Verdana, Geneva, Tahoma, sans-serif ;
}

.featured-description {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    color: #0c0707;
    text-decoration: solid;
    font-family: 'Courier New', Courier, monospace;
}

.read-more {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: #333;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    transition: background 0.3s;
    font-family: 'Courier New', Courier, monospace;
}

.read-more:hover {
    background: #555;
}
.quotes {
    font-size: 1.5rem; /* Larger text for emphasis */
    font-style: italic; /* Italicize to highlight the quote */
    color: #555; /* Subtle gray for a softer tone */
    text-align: center; /* Center the quote */
    line-height: 1.8; /* Increase line spacing for readability */
    margin: 20px auto; /* Add spacing around the quote */
    max-width: 600px; /* Limit the width for better focus */
    padding: 15px; /* Add padding for breathing space */
    background-color: #f9f9ff; /* Light background to distinguish it */
    border-left: 5px solid black; /* Accent border for style */
    border-radius: 8px; /* Rounded corners for a polished look */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
}



.recent-posts {
    margin-top: 2rem;
    font-family:'Courier New', Courier, monospace;
}

.recent-posts h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    text-align: center;
}

.post-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
}

.post {
    background: #fff;
    padding: 1rem;
    border: 1px solid #ddd;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    text-align: center;
}

.post-title a {
    color: #333;
    font-size: 1.5rem;
    text-decoration: none;
}

.post-title a:hover {
    color: #000;
}

.post-excerpt {
    color: #666;
    margin-top: 0.5rem;
}


.footer {
    background: #333;
    color: #fff;
    text-align: center;
    padding: 1rem 0;
    margin-top: 2rem;
    padding-left: 500px;
}

