<!DOCTYPE html>
<html lang="en">
<head>
    <title>MyBlog</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('/https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRWcHspnx9rRniJndirs3jr5CzjZhpXdObr_A&s'); /* Replace with your image URL */
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            margin: 0;
            padding: 0;
        }

        .main-container {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            padding: 20px;
            gap: 20px;
            padding-left: 250px;
        }

        .container {
            max-width: 40%; /* Adjust width for blog creation section */
            width: 100%;
            background: rgba(255, 255, 255, 0.9); /* Add transparency for the container */
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        .container h1 {
            font-size: 2rem;
            color: #333;
            margin-bottom: 20px;
            text-align: center;
        }

        .input-box {
            margin: 15px 0;
        }

        .input-box label {
            display: block;
            font-size: 1rem;
            margin-bottom: 5px;
        }

        .input-box input, .input-box textarea {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .input-box textarea {
            height: 100px;
            resize: none;
        }

        .submit-btn {
            background-color: #04182e;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s;
        }

        .submit-btn:hover {
            background-color: #082646;
        }

        .blog-list {
            max-width: 55%; /* Adjust width for blog list section */
            width: 100%;
            padding-left: 100px;
        }

        .listed-heading {
            font-size: 2.5rem;
            color: #131212;
            margin-bottom: 10px;
            text-align: center;
        }

        .post-list {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }

        .post-box {
            background: rgba(255, 255, 255, 0.9); /* Add transparency for blog list items */
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 15px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .post-box:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        }

        .post-title {
            font-size: 1.5rem;
            color: #0f1822;
            margin-bottom: 10px;
        }

        .post-title a {
            text-decoration: none;
        }

        .post-title a:hover {
            color: #06080a;
        }

        .post-excerpt {
            font-size: 1rem;
            color: #555;
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Blog Creation Form -->
        <div class="container">
            <h1>Create Your Blog</h1>
            <form action="/blog/Create" method="post">
                <div class="input-box">
                    <label for="title">Blog Title</label>
                    <input type="text" id="title" name="title" placeholder="Enter your blog title" required>
                </div>
                <div class="input-box">
                    <label for="content">Content</label>
                    <textarea id="content" name="content" placeholder="Write your blog content" required></textarea>
                </div>
                <button type="submit" class="submit-btn">Create Blog</button>
            </form>
        </div>

        <!-- Blog List Section -->
        <div class="blog-list">
            <h2 class="listed-heading">ALL BLOGS</h2>
            <div class="post-list">
                <% if (blogs && blogs.length > 0) { %>
                  <% blogs.forEach((blog) => { %>
                    <div class="post-box">
                      <h3 class="post-title">
                        <a href="#"><%= blog.title || "Untitled Post" %></a>
                      </h3>
                      <p class="post-excerpt">
                        <%= blog.content || "No content available." %>
                      </p>
                    </div>
                  <% }) %>
                <% } else { %>
                  <p>No blogs available at the moment. Check back later!</p>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>
